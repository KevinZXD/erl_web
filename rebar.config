{deps, [
  {poolboy, ".*", {git, "https://github.com/devinus/poolboy.git", {branch, "master"}}},
  {hackney, ".*", {git, "https://github.com/benoitc/hackney.git", {branch, "master"}}},
  {sync, ".*", {git, "git://github.com/rustyio/sync.git", {branch, "master"}}},
